	body{
		width:1000px;
		height:1350px;
		/*border:1px solid red;*/
		font-size: 15px;
		margin:0 auto;
	}
	.top1{
		width:1000px;
		height:28px;
		background-color: #b4b4b4;
	}
	/*登录*/
	.login{
		width:416px;
		height:26px;
		/*background-color: green;*/
		float: left;
		margin-left: 10px;
		margin-top: 2px;
	}
	/*卖炭网首页*/
	.indexpage{
		width:105px;
		height:26px;
		/*background-color: pink;*/
		float: right;
		margin-left: 80px;
		margin-top: 2px;
	}
	/*搜索框*/
	.search{
		width:250px;
		height:15px;
		/*background-color: pink;*/
		float: left;
		margin-top: 5px;
		margin-left: 5px;
	}
	/*类型*/
	.type{
		width:150px;
		height:15px;
		float: left;
		/*background-color: green;*/
		margin-left:340px;
		margin-top: 5px;
	}
	/*排序方式*/
	.rank{
		width:150px;
		height:15px;
		float: right;
		/*background-color: green;*/
		margin-top: 5px;
	}
	/*商品浏览*/
	.list{
		width:1000px;
		/*background-color: #b4b4b4;*/
		margin-top: 8px;
		float: left;
		margin-left:0px;
	}
	li{
		list-style: none;
		float: left;
		border: 2px solid #DDD;
		line-height: 170%;
		margin-right: 0.5%;
		width: 31%;
		margin-bottom: 2%;
	}
	li:HOVER{
		border:2px solid green; 
	}
	.mei{
		width:23%
		height: 300px;
		/*background-color: pink;**/
		margin-left:2px;
		margin-top:0px;
		float: left;
	}
	.mei img{
		width:95%;
		height: 95%;
		margin-top:7px;
		margin-left:5px;
	}
	/*价格*/
	.price{
		width:200px;
		font-size:20px;
		font-style:italic;
		font-weight:bold;
		color:red;
		margin-left:0px;
		margin-top:5px;
		/*background-color: green;*/
	}
	/*名称*/
	.text{
		margin-left:5px;
		margin-top:5px;
		/*background-color: green;*/
		text-decoration: none;
		color:#111;
		font-size: 16px;
	}
	a{
		border:0px solid #F00;
		color:#111;
		text-decoration: none;
	}
	a:HOVER{
		color:#F00;
		text-decoration: underline;
	}
	/*销量*/
	.number{
		margin-left:5px;
		margin-top:5px;
		font-size:16px;
		/*background-color: green;*/
	}
	/*联系客服&&加入购物车*/
	.connection{
		margin-left:5px;
		margin-top:5px;
		/*background-color: green;*/
	}
	.ww{
		width:25px;
		height:25px;
		margin-left: 3px;
		margin-top: 5px;
	}
	.car{
		width:140px;
		height:30px;
		background: url("images/car.png") no-repeat;
		float: right;
		margin-bottom:5px;
	}
	/*翻页*/
	.page{
		width:1000px;
		height:22px;	
	}
	.pageform{
		font-size: 18px;
		text-align: center;
	}