package com.moutum.csmp.service;

import java.util.List;

import com.moutum.csmp.base.PageBean;
import com.moutum.csmp.util.QueryHelper;

/************************************************************************************
 * @Title        : ServiceSupport.java
 * @Description : 
 * @Author       : BianWeiqing
 * @DateTime     : 2015年5月16日 上午11:37:17
 * @Copyright    : 2015 Moutum All Rights Reserved
 * @version      : V1.0
 ************************************************************************************/
public interface ServiceSupport<T>
{
    /********************************************************************************
     * 保存实体
     * 
     * @param entity
     ********************************************************************************/
    void save(T entity);

    /********************************************************************************
     * 删除实体
     * 
     * @param id
     ********************************************************************************/
    void delete(Integer id) throws Exception;
    
    /********************************************************************************
     * 根据提供的id数组删除符合条件的实体
     * 
     * @param id
     ********************************************************************************/
    void delete(Integer[] ids) throws Exception;

    /********************************************************************************
     * 更新实体
     * 
     * @param entity
     ********************************************************************************/
    void update(T entity);

    /********************************************************************************
     * 按id查询
     * 
     * @param id
     * @return
     ********************************************************************************/
    T getById(Integer id);

    /********************************************************************************
     * 按id数组查询对象集合
     * 
     * @param ids
     * @return
     ********************************************************************************/
    List<T> getByIds(Integer[] ids);

    /********************************************************************************
     * 查询所有
     * 
     * @return
     ********************************************************************************/
    List<T> findAll();

    /********************************************************************************
     * 根据提供的查询参数，查询符合条件的对象集合
     * @param queryHelper:HQL语句与参数列表
     * @return
     ********************************************************************************/
    List<T> getByQueryHelper(QueryHelper queryHelper);
    
    /********************************************************************************
     * 公共的查询分页信息的方法
     * 
     * @param pageNum:当前页号码
     * @param pageSize:每页数据量
     * @param queryHelper:HQL语句与参数列表
     * @return
     ********************************************************************************/
    PageBean getPageBean(int pageNum, int pageSize, QueryHelper queryHelper);
}

